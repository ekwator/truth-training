{
  "name": "truth-ui-desktop",
  "version": "0.1.0",
  "description": "Truth Training Desktop UI - Tauri Application",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "tauri": "tauri",
